<Window x:Class="KursCarShop.UpdateCarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CarShop" Height="223" Width="457" WindowStyle="ThreeDBorderWindow">
    <Grid Margin="20">
        <StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Сборка:" FontWeight="Bold" Width="100" />
                <ComboBox Name="Equipment_ID" Width="150" DisplayMemberPath="id" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Цена:" FontWeight="Bold" Width="100" />
                <TextBox Name="priceTextBox" Width="300" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Цвет:" FontWeight="Bold" Width="100" />
                <TextBox Name="colourTextBox" Width="300" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Наличие:" FontWeight="Bold" Width="100" />
                <CheckBox Name="availabilityCheckBox" />
            </StackPanel>


            <Button Content="Сохранить" Width="100" HorizontalAlignment="Center" Background="#3498db" Foreground="White" Click="UpdateCarSave" />
        </StackPanel>
    </Grid>
</Window>
